<div class="container">
  <div class="search_sanction_type">
    Filtrar sanções por Estado:
    <%= form_tag("/statistics/sanction_by_type_graph", method: "get", remote: true) do %>
      <%= select_tag 'state_', options_for_select(@states, :selected => params[:state_]), id: "select_tag"%>
      <%= submit_tag "Confirmar", name: nil, id: "select_button"%>
    <% end %>
  </div>
</div>

<div class="graph_sanction_type">
  <%=  render  "sanction_by_type"%>
</div>
