<div id="container">
	<div id="container">
		<div class="signup">
			<h1>Sign In</h1>
			<%= form_for(:session, url: sessions_path) do |f| %>
				<%= f.label :login, class: 'signup_text' %><br>
				<%= f.text_field :login, class: 'form-control' %><br><br>
				<%= f.label :password, class: 'signup_text' %><br>
				<%= f.password_field :password, class: 'form-control' %><br><br>

				<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
			<% end %>
			<p>New user? <%= link_to "Sign up now!", signup_path %></p>
		</div>
	</div>
</div>